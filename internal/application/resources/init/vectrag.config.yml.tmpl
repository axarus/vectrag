project:
  name: {{.ProjectName}}
  version: "1.0.0"

server:
  port: {{.Port}}
  host: "localhost"

database:
  type: {{.Database}}
  # Database connection will be configured in database.yml

paths:
  models: "./models"
  config: "./config"
  admin: "./admin"

development:
  hotReload: true
  enableCORS: true

